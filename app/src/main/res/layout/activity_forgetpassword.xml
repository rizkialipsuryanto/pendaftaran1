<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".forgetpassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:padding="40dp"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <!--            <ImageView-->
<!--                android:id="@+id/imageView4"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="109dp"-->
<!--                app:srcCompat="@drawable/smile" />-->

            <TextView
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:text="@string/lupa_password"
                android:textColor="@color/birunyacinta"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="@string/ket_password"
                android:textColor="@color/abuabu"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/fpemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/account"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="Masukan email"
                android:paddingLeft="0dp"
                android:textColor="@color/colorDivider"
                android:textColorHint="@color/abuabu" />

            <EditText
                android:id="@+id/fpnohp"
                android:layout_width="332dp"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@mipmap/phone1copy"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="No Hp"
                android:paddingLeft="0dp"
                android:textColor="@color/colorDivider"
                android:textColorHint="@color/abuabu" />

            <Button
                android:id="@+id/btnsimpanlupapassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_xml_btn_yellow"
                android:text="Konfirmasi"
                android:textColor="@color/putih"/>

<!--            <TextView-->
<!--                android:id="@+id/btnbuatakun"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:onClick="Daftar"-->
<!--                android:text="Buat Akun?"-->
<!--                android:textAppearance="?android:attr/textAppearanceMedium"-->
<!--                android:textColor="@color/design_default_color_primary"-->
<!--                android:visibility="invisible" />-->
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Bantuan.Fragment_Bantuan_Detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
    <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/pertanyaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertanyaan"
            />

        <TextView
            android:id="@+id/jawaban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hello_blank_fragment" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Masih Butuh Bantuan?"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_wa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/read"
            android:text="Hubungi Via Whatsapp"
            android:paddingLeft="10dp"
            android:layout_margin="10dp"
            android:textColor="@color/putih"
            android:gravity="center" />

    </LinearLayout>
</RelativeLayout>